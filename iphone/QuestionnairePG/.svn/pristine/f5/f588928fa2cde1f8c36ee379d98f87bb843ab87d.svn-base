                                <div class="form-group">
                                    <label class="control-label col-md-4">项目名称：</label>

                                    <div class="col-md-8">
                                        <input datakey="task_name" type="text" class="form-control  input-circle"
                                               placeholder="如:中小学2017年安全检查（必填项）" id="task_name1" name="task_name">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">项目开始时间：</label>

                                    <div class="col-md-8">
                                        <div class="input-group input-medium date date-picker"
                                             data-date-format="yyyy-mm-dd">
                                            <input datakey="start_time" id="start_time1" name="start_time" type="text"
                                                   class="form-control">
					                                <span class="input-group-btn">
					                                <button class="btn default" type="button"><i
                                                            class="fa fa-calendar"></i></button>
					                                </span>
                                        </div>
                                        <!-- /input-group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">项目结束时间：</label>

                                    <div class="col-md-8">
                                        <div class="input-group input-medium date date-picker"
                                             data-date-format="yyyy-mm-dd">
                                            <input datakey="end_time" id="end_time1" name="end_time" type="text"
                                                   class="form-control">
					                                <span class="input-group-btn">
					                                <button class="btn default" type="button"><i
                                                            class="fa fa-calendar"></i></button>
					                                </span>
                                        </div>
                                        <!-- /input-group -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="control-label col-md-4">项目概述：</label>

                                    <div class="col-md-8">
                                        <textarea name="" cols="30" rows="10"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
