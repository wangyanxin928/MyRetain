<div id="confirm" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-body">
        <p>
            确认删除这条数据?
        </p>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default" id="noserl">再想想</button>
        <button type="button" data-dismiss="modal" class="btn blue" id="yesserl">是的</button>
    </div>
</div>

<!--弹出层-->
<div id="ejectForm" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">修改项目</h4>
    </div>
