<div class="row">
    <div class="col-md-12">
        <div class="portlet light  ">
            <div class="portlet-title">
                <div class="caption">
                    <span class="caption-subject bold font-grey-gallery uppercase">问卷列表</span>
                </div>
                <div class="tools">
                    <span class="caption-helper"><a>   </a></span>
                    <a href="" class="collapse" data-original-title=" 收起/展开" title="收起/展开"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">

                    <div class="col-md-12 text-right">
                        <form class="form-inline">
                            <div class="form-group">
                                <input datakey="classNameSearch" type="text" class="form-control  input-circle" placeholder="问卷名称..." id="classNameSearch" name="classNameSearch">
                            </div>
                            <a class="btn btn-outline green-haze" id="select">搜索</a>
                            <a class="btn btn-outline green-haze" id="addQuession">创建</a>
                            <a class="btn btn-outline green-haze" id="import">导入</a>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div id="dataTableWrapper" style="margin-top: 16px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="confirm" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-body">
        <p>
            确认删除这条数据?
        </p>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default" id="noserl">再想想</button>
        <button type="button" data-dismiss="modal" class="btn blue" id="yesserl">是的</button>
    </div>
</div>

<!--问卷弹出层-->
<div id="quesManageModal" style="display:none;">
    <div class="larry-personal-body">
        <form class="layui-form" lay-filter="quesForm">
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <a style="color: #4fc3ba;font-size: 14px;" id="papermodel" name="papermodel">问卷模版下载</a>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">问卷名称</label>
                <div class="layui-input-block">
                    <input type="text" name="username" autocomplete="off" class="layui-input" placeholder="请输入问卷名称"
                           required lay-verify="required"
                           value="" id="quesName">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">适用对象</label>
                <div class="layui-input-block">
                    <select name="quiz3" required lay-verify="required" id="quesTarget">
                        <option value="">请选择适用对象</option>
                        <option value="学生">学生</option>
                        <option value="家长">家长</option>
                        <option value="教师">教师</option>
                        <option value="校长">校长</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">适用学段</label>
                <div class="layui-input-block">
                    <input type="checkbox" title="全选" lay-skin="primary" checked id="gradeCheckAll" lay-filter="gradeCheckAll">
                    <!--<input type="checkbox" name="quesGrade" title="幼儿园" lay-skin="primary" checked value="幼儿园" lay-filter="quesGrade">-->
                    <input type="checkbox" name="quesGrade" title="小学" lay-skin="primary" checked value="小学" lay-filter="quesGrade">
                    <input type="checkbox" name="quesGrade" title="初中" lay-skin="primary" checked value="初中" lay-filter="quesGrade">
                    <input type="checkbox" name="quesGrade" title="高中" lay-skin="primary" checked value="高中" lay-filter="quesGrade">
                    <input type="checkbox" name="quesGrade" title="职高" lay-skin="primary" checked value="职高" lay-filter="quesGrade">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">问卷附件</label>
                <div class="layui-input-block">
                    <div class="uploadFile">
                        <span >
                            <a href="javascript:void(0)" class="data-upload-icon1"  > </a>
                            <input type="file" name="files" class="btn-upload" id="fileupload" style="opacity: 0;width: 20px;">
                         </span>
                    </div>
                </div>
            </div>
            <div class="layui-form-item" style="margin-bottom: 0;padding-bottom: 0;">
                <label class="layui-form-label"></label>
                <div class="layui-input-block" id="fileNameWrapper">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">问卷描述</label>
                <div class="layui-input-block">
                    <textarea name="desc" placeholder="请输入问卷描述" class="layui-textarea" id="quesRemark"></textarea>
                </div>
            </div>
            <button class="layui-btn mt3 mr10" lay-submit="" lay-filter="quesSave" style="display:none;">提交</button>
        </form>
    </div>
</div>